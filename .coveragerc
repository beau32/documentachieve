[run]
# Coverage configuration
source = app
omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */site-packages/*

[report]
# Reporter settings
exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod
    @abc.abstractmethod
    class .*\(Protocol\):
    if 0:
    if False:
    if settings.debug:

precision = 2
show_missing = True
skip_covered = False

[html]
directory = htmlcov

[xml]
output = coverage.xml
