# Cloud Document Archive - Environment Configuration
# Copy this file to .env and update the values

# Application Settings
APP_NAME="Cloud Document Archive"
DEBUG=false

# Storage Provider Selection
# Options: aws_s3, azure_blob, gcp_storage
STORAGE_PROVIDER=aws_s3

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=document-archive

# AWS Glacier Configuration (for deep archive)
AWS_GLACIER_RESTORE_DAYS=7
AWS_GLACIER_RESTORE_TIER=Standard  # Options: Expedited, Standard, Bulk

# Azure Blob Storage Configuration
AZURE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=youraccountname;AccountKey=youraccountkey;EndpointSuffix=core.windows.net
AZURE_CONTAINER_NAME=document-archive

# GCP Storage Configuration
GCP_PROJECT_ID=your-project-id
GCP_CREDENTIALS_PATH=/path/to/service-account-key.json
GCP_BUCKET_NAME=document-archive

# Database Configuration
DATABASE_URL=sqlite:///./document_archive.db

# Kafka Configuration
KAFKA_ENABLED=false
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_RESTORE_READY=document-restore-ready
KAFKA_TOPIC_ARCHIVED=document-archived

# Lifecycle/Automatic Archival Configuration
LIFECYCLE_ENABLED=false
LIFECYCLE_ARCHIVE_AFTER_DAYS=90       # Days after creation to move to archive
LIFECYCLE_DEEP_ARCHIVE_AFTER_DAYS=365 # Days after creation to move to deep archive
LIFECYCLE_CHECK_INTERVAL_HOURS=24     # How often to check for files to archive
